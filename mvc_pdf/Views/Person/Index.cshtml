@model mvc.Models.Person
@{
    ViewBag.Title = "Convert to file";
}
<html>
<head>

</head>
<body>
    <h2>Text file creator</h2>

    <div class="dane">
        @using (Html.BeginForm("/Index", "Person", FormMethod.Post))
        {
            <div class="form-group">
                <label for="imie">Imię</label>
                <input type="text" class="form-control" id="imie" name="imie" value="@Model.Imie" />
            </div>
            <div class="form-group">
                <label for="nazwisko">Nazwisko</label>
                <input type="text" class="form-control" id="nazwisko" name="nazwisko" value="@Model.Nazwisko" />
            </div>
            <div class="form-group">
                <label for="wiek">Wiek</label>
                <input type="number" class="form-control" id="wiek" name="wiek" value="@Model.Nazwisko" />
            </div>
            <div class="form-group">
                <label for="kraj">Kraj</label>
                <input type="text" class="form-control" id="kraj" name="kraj" value="@Model.Kraj" />
            </div>
            <div class="form-group">
                <label for="surname">Miasto</label>
                <input type="text" class="form-control" id="miasto" name="miasto" value="@Model.Miasto" />
            </div>
            <button type="submit" class="btn btn-info" id="creator1" value="creator1" name="creator1">Stwórz PDF</button>
            <button type="submit" class="btn btn-info" id="creator2" value="creator2" name="creator2">Stwórz TXT</button>
            <button type="submit" class="btn btn-info" id="creator3" value="creator3" name="creator3">Stwórz DAT</button>
        }
    </div>
</body>
</html>
